{{#pagination}}

<nav class="pagination is-centered" role="navigation" aria-label="pagination">
    {{#isEqual previous 0 }}{{else}}
    <a class="pagination-previous" href="/{{for}}/page/{{previous}}">Previous</a>
    {{/isEqual}} {{#isEqual next 0}}{{else}}
    <a class="pagination-next" href="/{{for}}/page/{{next}}">Next page</a>
    {{/isEqual}}

    <ul class="pagination-list">
        {{#repeat pageCount start=1}}
        <li>
            <a class="pagination-link{{#isEqual @index page}} is-current{{/isEqual}}" aria-current="page" aria-label="{{#isEqual @index page}}Page {{else}}Goto page {{@index}}{{/isEqual}}">{{@index}}</a>
        </li>
        {{/repeat}}
    </ul>
</nav>

{{/pagination}}